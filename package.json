	},
	"devDependencies": {
		"@evilmartians/lefthook": "^1.3.9",
		"@types/node": "^18.15.11",
		"@types/react": "^18.0.33",
		"@types/react-dom": "^18.0.11",
		"@vangware/configs": "^4.2.2",
		"@vangware/test": "^10.1.3",
		"@vangware/types": "^5.1.5",
		"c8": "^7.13.0",
		"eslint": "^8.38.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.7",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"rimraf": "^4.4.1",
		"stylelint": "^15.4.0",
		"ts-node": "^10.9.1",
		"typescript": "~5.0.4"
	},
	"exports": {
		".": "./dist/index.js"
	},
	"files": [
		"dist"
	],
	"homepage": "https://react-pair.vangware.com",
	"keywords": [
